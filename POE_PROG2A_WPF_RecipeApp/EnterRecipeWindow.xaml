<Window x:Class="RecipeApp.EnterRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Recipe" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter Recipe" FontSize="20" HorizontalAlignment="Center" Margin="10"/>

            <TextBlock Text="Recipe Name:"/>
            <TextBox Name="RecipeNameTextBox" Margin="5"/>

            <TextBlock Text="Number of Ingredients:"/>
            <TextBox Name="NumIngredientsTextBox" Margin="5"/>

            <Button Content="Add Ingredients" Name="AddIngredientsButton" Margin="5" Click="AddIngredientsButton_Click"/>

            <ListBox Name="IngredientsListBox" Margin="10"/>

            <TextBlock Text="Number of Steps:"/>
            <TextBox Name="NumStepsTextBox" Margin="5"/>

            <Button Content="Add Steps" Name="AddStepsButton" Margin="5" Click="AddStepsButton_Click"/>

            <ListBox Name="StepsListBox" Margin="10"/>

            <Button Content="Save Recipe" Name="SaveButton" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Cancel" Name="CancelButton" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
