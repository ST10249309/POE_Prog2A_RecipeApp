<Window x:Class="RecipeApp.EnterStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Step" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter Step" FontSize="16" HorizontalAlignment="Center" Margin="10"/>
            <TextBox Name="StepTextBox" Margin="5" Height="60" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Content="Save" Name="SaveButton" Width="60" Margin="5" Click="SaveButton_Click"/>
                <Button Content="Cancel" Name="CancelButton" Width="60" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
